<openerp>
    <data>

        <record id="payment_method_view_form" model="ir.ui.view">
            <field name="name">sale_payment_method.payment_method.view_form</field>
            <field name="model">payment.method</field>
            <field name="inherit_id" ref="sale_payment_method.payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Default Values']" position="after">
                    <group string="Surcharge included" name="surcharge">
                        <field name="surcharge_included"/>
                        <group attrs="{'invisible': [('surcharge_included', '=', False)]}">
                            <label for="surcharge_amount"/>
                            <div>
                                <field name="surcharge_amount" class="oe_inline"
                                    attrs="{'required': [('surcharge_included', '=', True)]}"/>
                                <field name="surcharge_type" class="oe_inline"
                                    attrs="{'required': [('surcharge_included', '=', True)]}"/>
                            </div>
                            <field name="surcharge_account"
                                attrs="{'required': [('surcharge_included', '=', True)]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>