<openerp>
    <data>

        <record id="payment_method_view_form" model="ir.ui.view">
            <field name="name">sale_payment_method.payment_method.view_form</field>
            <field name="model">payment.method</field>
            <field name="inherit_id" ref="sale_payment_method.payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Default Values']" position="after">
                    <group string="Surcharge included" name="surcharge">
                        <group string="Surcharge Options">
                            <field name="surcharge_account"/>
                            <field name="surcharge_lines" nolabel="1" colspan="4">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="payment_method" invisible="1"/>
                                    <field name="amount"/>
                                    <field name="surcharge_type"/>
                                    <field name="min_amount"
                                        attrs="{'readonly': [('surcharge_type', '!=', 'percentage')]}"/>
                                    <field name="country_apply_type"/>
                                    <field name="country"
                                        attrs="{'readonly': [('country_apply_type', '=', False)],
                                                'required': [('country_apply_type', '!=', False)]}"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>