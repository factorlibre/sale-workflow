<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sale_order_qty_on_line_form" model="ir.ui.view">
            <field name="name">sale.order.form qty on line</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock_on_line.sale_order_qty_on_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='qty_available']"
                        position="before">
                    <field name="real_qty_available" string="Available"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='qty_available']"
                        position="before">
                    <field name="real_qty_available" string="Available"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>